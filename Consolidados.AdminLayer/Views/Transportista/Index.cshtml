
@{
    ViewBag.Title = "Transportistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Transportista</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Transportistas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nueva</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Apellidos</th>
                    <th>Nombres</th>
                    <th>Licencia de Conducir</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Transportista</h5>
                <button type="button" class="btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <div class="row g-1">
                    <div class="col-sm-6">
                        <label for="txtapellidos" class="form-label">Apellidos:</label>
                        <input type="text" class="form-control" id="txtapellidos" placeholder="Apellidos" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtnombres" class="form-label">Nombres:</label>
                        <input type="text" class="form-control" id="txtnombres" placeholder="Nombres" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtDNI" class="form-label">DNI:</label>
                        <input type="text" class="form-control" id="txtdni" placeholder="DNI" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtlicencia" class="form-label">Licencia:</label>
                        <input type="text" class="form-control" id="txtlicencia" placeholder="Licencia de Conducir" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txttelefono" class="form-label">Telefono:</label>
                        <input type="text" class="form-control" id="txttelefono" placeholder="Teléfono" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="cboestado" class="form-label">Estado:</label>
                        <select id="cboestado" class="form-select"></select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar Datos</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarTransportista", "Transportista")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Apellidos" },
                { "data": "Nombres" },
                { "data": "LicConducir" },
                { "data": "Telefono" },
                {
                    "data": "oEstado", "render": function (data) {
                        return data.NombreEstado
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }
        });

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#txtapellidos").val("");
            $("#txtnombres").val("");
            $("#txtdni").val("");
            $("#txtlicencia").val("");
            $("#txttelefono").val("");
            $("#cboestado").val($("#cboestado option:first").val());
            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.IdTransportista);
                $("#txtapellidos").val(json.Apellidos);
                $("#txtnombres").val(json.Nombres);
                $("#txtdni").val(json.DNI);
                $("#txtlicencia").val(json.LicConducir);
                $("#txttelefono").val(json.Telefono);
                $("#cboestado").val(json.oEstado.IdEstado);
            }
            $("#FormModal").modal("show");
        }

        /*Control de Lista Desplegable: Estado*/
        jQuery.ajax({
            url: '@Url.Action("ListarEstados", "Estado")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboestado");
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdEstado }).text(item.NombreEstado).appendTo("#cboestado");
                })
            },
            error: function(error) {
                console.log(error)
            },
            beforeSend: function () {

            },
        });

        $("#tabla tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            var transportistaseleccionado = $(this).closest("tr");
            var data = tabladata.row(transportistaseleccionado).data();

            swal({
                title: "Consolidados",
                text: "¿Desea eliminar este registro?",
                type: "warning",
                showCancelButton: "true",
                confirmationButtonClass: "btn btn-danger",
                confirmationButtonText: "Sí",
                cancelButtonClass: "btn btn-primary",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarTransportista", "Transportista")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdTransportista }),
                        contentType: "application/json; charset=UTF-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(transportistaseleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar el registro", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                        beforeSend: function () {

                        },
                    });
                });

            console.log(data)
        })

        function Guardar() {
            var Transportista = {
                IdTransportista: $("#txtid").val(),
                Apellidos: $("#txtapellidos").val(),
                Nombres: $("#txtnombres").val(),
                DNI: $("#txtdni").val(),
                LicConducir: $("#txtlicencia").val(),
                Telefono: $("#txttelefono").val(),
                oEstado: {
                    IdEstado: $("#cboestado option:selected").val(),
                    NombreEstado: $("#cboestado option:selected").text()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarTransportista", "Transportista")',
                type: "POST",
                data: JSON.stringify({ objeto: Transportista }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");
                    if (Transportista.IdTransportista == 0) {
                        if (data.resultado != 0) {
                            Transportista.IdTransportista = data.resultado;
                            tabladata.row.add(Transportista).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $(".modal-body").LoadingOverlay("hide");
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Transportista).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide")
                    $("#mensajeError").text();
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            });
        }
    </script>
}