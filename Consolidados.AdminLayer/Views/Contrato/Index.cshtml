
@{
    ViewBag.Title = "Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Contratos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Lista de Contratos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Empresa</th>
                    <th># Contrato</th>
                    <th># Lote</th>
                    <th>Fecha Contrato</th>
                    <th>Lugar Carga</th>
                    <th>Lugar Descarga</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Contrato</h5>
                <button type="button" class="btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <div class="row g-1">
                    <div class="col-sm-12">
                        <label for="exampleFormControlInput1" class="form-label">Empresa:</label>
                        <select id="cboempresa" class="form-select"></select>
                    </div>
                    <div class="col-sm-12">
                        <label for="txtnrocontrato" class="form-label"># Contrato:</label>
                        <input type="text" class="form-control" id="txtnrocontrato" placeholder="Nro. Contrato" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label for="txtnrolote" class="form-label"># Lote:</label>
                        <input type="text" class="form-control" id="txtnrolote" placeholder="Nombre de Lote" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtfechacontrato" class="form-label">Fecha del Contrato:</label>
                        <input type="date" class="form-control" id="txtfechacontrato" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtfechacarga" class="form-label">Fecha de Carga:</label>
                        <input type="date" class="form-control" id="txtfechacarga" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label for="txtlugarcarga" class="form-label">Lugar de Carga:</label>
                        <input type="text" class="form-control" id="txtlugarcarga" placeholder="Lugar de Carga" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtfechadescarga" class="form-label">Fecha de Descarga:</label>
                        <input type="date" class="form-control" id="txtfechadescarga" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label for="txtlugardescarga" class="form-label">Lugar de Descarga:</label>
                        <input type="text" class="form-control" id="txtlugardescarga" placeholder="Lugar de Descarga" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Estado</label>
                        <select id="cboestado" class="form-select"></select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarContrato", "Contrato")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                {
                    "data": "oEmpresa", "render": function (data) {
                        return data.RazonSocial
                    }
                },
                { "data": "NroContrato" },
                { "data": "NroContratoLote" },
                { "data": "FechaContrato" },
                { "data": "LugarCarga" },
                { "data": "LugarDescarga" },
                {
                    "data": "oEstado", "render": function (data) {
                        return data.NombreEstado
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }
        });

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#cboempresa").val($("#cboempresa option:first").val());
            $("#txtnrocontrato").val("");
            $("#txtnrolote").val("");
            $("#txtfechacontrato").val("");
            $("#txtfechacarga").val("");
            $("#txtlugarcarga").val("");
            $("#txtfechadescarga").val("");
            $("#txtlugardescarga").val("");
            $("#cboestado").val($("#cboestado option:first").val());
            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.IdContrato);
                $("#cboempresa").val(json.oEmpresa.IdEmpresa);
                $("#txtnrocontrato").val(json.NroContrato);
                $("#txtnrolote").val(json.NroContratoLote);
                $("#txtfechacontrato").val(json.FechaContrato);
                $("#txtfechacarga").val(json.FechaCarga);
                $("#txtlugarcarga").val(json.LugarCarga);
                $("#txtfechadescarga").val(json.FechaDescarga);
                $("#txtlugardescarga").val(json.LugarDescarga);
                $("#cboestado").val(json.oEstado.IdEstado);
            }
            $("#FormModal").modal("show");
        }

        /*Control de Lista Desplegable: Estado*/
        jQuery.ajax({
            url: '@Url.Action("ListarEstados", "Estado")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboestado");
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdEstado }).text(item.NombreEstado).appendTo("#cboestado");
                })
            },
            error: function(error) {
                console.log(error)
            },
            beforeSend: function () {

            },
        });

        /*Control de Lista Desplegable: Empresas*/
        jQuery.ajax({
            url: '@Url.Action("ListarEmpresa", "Empresa")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboempresa");
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdEmpresa }).text(item.RazonSocial).appendTo("#cboempresa");
                })
            },
            error: function(error) {
                console.log(error)
            },
            beforeSend: function () {

            },
        });

        $("#tabla tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            var contratoseleccionado = $(this).closest("tr");
            var data = tabladata.row(contratoseleccionado).data();

            swal({
                title: "Consolidados",
                text: "¿Desea eliminar este registro?",
                type: "warning",
                showCancelButton: "true",
                confirmationButtonClass: "btn btn-danger",
                confirmationButtonText: "Sí",
                cancelButtonClass: "btn btn-primary",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarContrato", "Contrato")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdContrato }),
                        contentType: "application/json; charset=UTF-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(contratoseleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar el registro", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                        beforeSend: function () {

                        },
                    });
                });

            console.log(data)
        })

        function Guardar() {
            var Contrato = {
                IdContrato: $("#txtid").val(),
                oEmpresa: {
                    IdEmpresa: $("#cboempresa option:selected").val(),
                    RazonSocial: $("#cboempresa option:selected").text()
                },
                NroContrato: $("#txtnrocontrato").val(),
                NroContratoLote: $("#txtnrolote").val(),
                FechaContrato: $("#txtfechacontrato").val(),
                FechaCarga: $("#txtfechacarga").val(),
                LugarCarga: $("#txtlugarcarga").val(),
                FechaDescarga: $("#txtfechadescarga").val(),
                LugarDescarga: $("#txtlugardescarga").val(),
                oEstado: {
                    IdEstado: $("#cboestado option:selected").val(),
                    NombreEstado: $("#cboestado option:selected").text()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarContrato", "Contrato")',
                type: "POST",
                data: JSON.stringify({ objeto: Contrato }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");
                    if (Contrato.IdContrato == 0) {
                        if (data.resultado != 0) {
                            Contrato.IdContrato = data.resultado;
                            tabladata.row.add(Contrato).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $(".modal-body").LoadingOverlay("hide");
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Contrato).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide")
                    $("#mensajeError").text();
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            });
        }
    </script>
}