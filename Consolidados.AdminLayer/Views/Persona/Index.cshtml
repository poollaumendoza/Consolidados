
@{
    ViewBag.Title = "Personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Personas</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Lista de Personas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nueva</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>T. Documento</th>
                    <th># Documento</th>
                    <th>Nombre Completo</th>
                    <th>Telefono</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Nueva Persona</h5>
                <button type="button" class="btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <form id="contenedor" class="row">
                    <div class="col-sm-12">
                        <div class="mb-3">
                            <img id="imgpersona" height="200" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="file" id="filefoto" accept="image/png,image/jpg,image/jpeg" onchange="mostrarImagen(this)" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mb-2">
                            <label for="exampleFormControlInput1" class="form-label">Tipo Documento:</label>
                            <select id="cbotipodocumento" class="form-select"></select>
                        </div>
                        <div class="mb-2">
                            <label for="txtnrodocumento" class="form-label">Nro. Documento:</label>
                            <input type="text" class="form-control" id="txtnrodocumento" placeholder="Nro. Documento" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtapellidopaterno" class="form-label">Apellido Paterno:</label>
                            <input type="text" class="form-control" id="txtapellidopaterno" placeholder="Apellido Paterno" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtapellidomaterno" class="form-label">Apellido Materno:</label>
                            <input type="text" class="form-control" id="txtapellidomaterno" placeholder="Apellido Materno" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mb-2">
                            <label for="txtprimernombre" class="form-label">Primer Nombre:</label>
                            <input type="text" class="form-control" id="txtprimernombre" placeholder="Primer Nombre" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtsegundonombre" class="form-label">Segundo Nombre:</label>
                            <input type="text" class="form-control" id="txtsegundonombre" placeholder="Segundo Nombre" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtfechanacimiento" class="form-label">Fec. Nacimiento:</label>
                            <input type="text" class="form-control" id="txtfechanacimiento" placeholder="Fecha de Nacimiento" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtdireccion" class="form-label">Dirección:</label>
                            <input type="text" class="form-control" id="txtdireccion" placeholder="Dirección" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="mb-2">
                            <label for="txttelefono" class="form-label">Teléfono:</label>
                            <input type="text" class="form-control" id="txttelefono" placeholder="Teléfono" autocomplete="off">
                        </div>
                        <div class="mb-2">
                            <label for="txtemail" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="txtemail" placeholder="Email" autocomplete="off">
                        </div>
                    </div>
                    <hr/>
                    <div class="col-sm-12">
                        <div class="mb-12">
                            <label for="exampleFormControlInput1" class="form-label">Estado:</label>
                            <select id="cboestado" class="form-select"></select>
                        </div>
                    </div>
                </form>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar Persona</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        var tabladata;
        var filaSeleccionada;

        $("#txtfechanacimiento").datepicker()

        /* Mostrar la imagen seleccionada */
        function mostrarImagen(input) {
            if (input.files) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("#imgpersona").attr("src", e.target.result).width(200).height(200)
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarPersona", "Persona")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                {
                    "data": "oTipoDocumento", "render": function (data) {
                        return data.NombreTipoDocumento
                    }
                },
                { "data": "NroDocumento" },
                { "data": "NombreCompleto" },
                { "data": "Telefono" },
                { "data": "Email" },
                {
                    "data": "oEstado", "render": function (data) {
                        return data.NombreEstado
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }
        });

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#cbotipodocumento").val($("#cbotipodocumento option:first").val());
            $("#txtnrodocumento").val("");
            $("#txtapellidopaterno").val("");
            $("#txtapellidomaterno").val("");
            $("#txtprimernombre").val("");
            $("#txtsegundonombre").val("");
            $("#txtfechanacimiento").val("");
            $("#txtdireccion").val("");
            $("#txttelefono").val("");
            $("#txtemail").val("");
            $("#cboestado").val($("#cboestado option:first").val());
            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.IdPersona);
                $("#cbotipodocumento").val(json.oTipoDocumento.IdTipoDocumento);
                $("#txtnrodocumento").val(json.NroDocumento);
                $("#txtapellidopaterno").val(json.ApellidoPaterno);
                $("#txtapellidomaterno").val(json.ApellidoMaterno);
                $("#txtprimernombre").val(json.PrimerNombre);
                $("#txtsegundonombre").val(json.SegundoNombre);
                $("#txtfechanacimiento").val(json.FechaNacimiento);
                $("#txtdireccion").val(json.Direccion);
                $("#txttelefono").val(json.Telefono);
                $("#txtemail").val(json.Email);
                $("#cboestado").val(json.oEstado.IdEstado);
            }
            $("#FormModal").modal("show");
        }

        /*Control de Lista Desplegable: Estado*/
        jQuery.ajax({
            url: '@Url.Action("ListarEstados", "Estado")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboestado");
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdEstado }).text(item.NombreEstado).appendTo("#cboestado");
                })
            },
            error: function(error) {
                console.log(error)
            },
            beforeSend: function () {

            },
        });

        /*Control de Lista Desplegable: TipoDocumento*/
        jQuery.ajax({
            url: '@Url.Action("ListarTipoDocumento_Identidad", "TipoDocumento")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cbotipodocumento");
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdTipoDocumento }).text(item.NombreTipoDocumento).appendTo("#cbotipodocumento");
                })
            },
            error: function(error) {
                console.log(error)
            },
            beforeSend: function () {

            },
        });

        $("#tabla tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            var personaseleccionada = $(this).closest("tr");
            var data = tabladata.row(personaseleccionada).data();

            swal({
                title: "Consolidados",
                text: "¿Desea eliminar este registro?",
                type: "warning",
                showCancelButton: "true",
                confirmationButtonClass: "btn btn-danger",
                confirmationButtonText: "Sí",
                cancelButtonClass: "btn btn-primary",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarPersona", "Persona")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdPersona }),
                        contentType: "application/json; charset=UTF-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(personaseleccionada).remove().draw();
                            } else {
                                swal("No se pudo eliminar el registro", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                        beforeSend: function () {

                        },
                    });
                });

            console.log(data)
        })

        function Guardar() {
            var Persona = {
                IdPersona: $("#txtid").val(),
                oTipoDocumento: {
                    IdTipoDocumento: $("#cbotipodocumento option:selected").val(),
                    NombreTipoDocumento: $("#cbotipodocumento option:selected").text()
                },
                NroDocumento: $("#txtnrodocumento").val(),
                ApellidoPaterno: $("#txtapellidopaterno").val(),
                ApellidoMaterno: $("#txtapellidomaterno").val(),
                PrimerNombre: $("#txtprimernombre").val(),
                SegundoNombre: $("#txtsegundonombre").val(),
                FechaNacimiento:  $("#txtfechanacimiento").val(),
                Direccion: $("#txtdireccion").val(),
                Telefono: $("#txttelefono").val(),
                Email: $("#txtemail").val(),
                oEstado: {
                    IdEstado: $("#cboestado option:selected").val(),
                    NombreEstado: $("#cboestado option:selected").text()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarPersona", "Persona")',
                type: "POST",
                data: JSON.stringify({ objeto: Persona }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");
                    if (Persona.IdPersona == 0) {
                        if (data.resultado != 0) {
                            Persona.IdPersona = data.resultado;
                            tabladata.row.add(Persona).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $(".modal-body").LoadingOverlay("hide");
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Persona).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide")
                    $("#mensajeError").text();
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            });
        }
    </script>
}