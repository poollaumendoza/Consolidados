<mah:MetroWindow x:Class="Consolidados.Desktop.Forms.Operaciones.Contrato.wndListaContrato"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="{DynamicResource ToolbarContratos}" Height="450" Width="800"
                 WindowStartupLocation="CenterScreen">
    <Grid>
        <ToolBar VerticalAlignment="Top">
            <Button Name="btnAgregar" Click="BtnAgregar_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/add.png" Width="32"/>
                    <Label Content="{DynamicResource ToolbarContratos}" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>
        <DataGrid Name="dg" Margin="0,49,0,0" AutoGenerateColumns="False" BorderThickness="1" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource FormsOperacionesContratoEmpresa}" Binding="{Binding Path=oEmpresa.RazonSocial}"/>
                <DataGridTextColumn Header="{DynamicResource FormsOperacionesContratoNroLote}" Binding="{Binding Path=NroContratoLote}"/>
                <DataGridTextColumn Header="{DynamicResource FormsOperacionesContratoFechaCarga}" Binding="{Binding Path=FechaCarga}"/>
                <DataGridTextColumn Header="{DynamicResource FormsOperacionesContratoFechaDescarga}" Binding="{Binding Path=FechaDescarga}"/>
                <DataGridTextColumn Header="{DynamicResource FormsOperacionesContratoEstado}" Binding="{Binding Path=oEstado.NombreEstado}"/>
                <DataGridTextColumn Width="1*"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="btnEditar" CommandParameter="{Binding Path=IdContrato, Mode=TwoWay}" Click="BtnEditar_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/edit.png" Width="16"/>
                                    <Label Content="{DynamicResource SistemaEditar}" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="btnEliminar" CommandParameter="{Binding Path=IdContrato, Mode=TwoWay}" Click="BtnEliminar_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/delete.png" Width="16"/>
                                    <Label Content="{DynamicResource SistemaEliminar}" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>